//Array Input and Output

#include <stdio.h>
int main() {
// variable declaration
	int array[100],size;
//input and output section
	printf("enter the size of array : ");
	scanf("%d",&size);
	printf("enter the array elements:\n");
	for(int i=0; i<size; i++) {
		scanf("%d",&array[i]);
	}
	printf("the array elements are:\n");
	for(int i=0; i<size; i++) {
		printf("%d\t",array[i]);
	}
	return 0;
}

-----------------------------------------------------------------------------
//Maximum number in array

#include <stdio.h>

int main() {
// variable declaration
	int array[100],size,max_num=0;
	
//input and output section
	printf("enter the size of array : ");
	scanf("%d",&size);
	printf("enter the array elements:\n");
	for(int i=0; i<size; i++) {
		scanf("%d",&array[i]);
	}
	for(int i=0; i<size; i++) {
		printf("%d",array[i]);
	}
	
//logic of finding the largest
	for(int i=0; i<size; i++) {
		if(max_num<array[i]) {
			max_num=array[i];
		}
	}
	printf("the max element is %d",max_num);
	return 0;
}

----------------------------------------------------------------------------------

//Second largest

#include <stdio.h>
int main() {
// variable declaration
	int array[100],size,max_num=0,second_max=0;
	
//input and output section
	printf("enter the size of array : ");
	scanf("%d",&size);
	printf("enter the array elements:\n");
	for(int i=0; i<size; i++) {
		scanf("%d",&array[i]);
	}
	for(int i=0; i<size; i++) {
		printf("%d\t",array[i]);
	}
	max=array[0];
	
//logic of finding the second largest
	for(int i=0; i<size; i++) {
		if(max<array[i]) {
			second_max=max_num;
			max_num=array[i];
		}
		else if(array[i]>second_max && array[i]!=max_num) {
			second_max=array[i];
		}
	}
	printf("\nthe second max element is %d",second_max);
	return 0;
}
